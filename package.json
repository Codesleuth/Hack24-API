{
  "name": "hack24-api",
  "description": "Hack24 Application",
  "version": "0.1.1",
  "private": true,
  "main": "./bin/server.js",
  "scripts": {
    "clean": "rimraf build",
    "lint": "tslint -c src/tslint.json -e \"src/**/*.d.ts\" \"src/**/*.ts\"",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc -p src/",
    "start": "node .",
    "test": "mocha --timeout 5000 -R dot --require source-map-support/register --recursive build",
    "heroku-postbuild": "npm run build && npm prune --production"
  },
  "dependencies": {
    "@slack/client": "^3.9.0",
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "mongoose": "^4.9.5",
    "morgan": "^1.8.1",
    "pusher": "^1.5.1",
    "slug": "^0.9.1",
    "source-map-support": "^0.4.14",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/express": "^4.0.35",
    "@types/mime": "0.0.29",
    "@types/mocha": "^2.2.40",
    "@types/mongodb": "^2.1.43",
    "@types/mongoose": "^4.7.10",
    "@types/morgan": "^1.7.32",
    "@types/serve-static": "^1.7.31",
    "@types/superagent": "^2.0.36",
    "@types/supertest": "^2.0.0",
    "@types/winston": "^2.3.0",
    "mocha": "^3.2.0",
    "mongodb": "^2.2.25",
    "promisify-supertest": "^1.0.0",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  }
}
