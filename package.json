{
  "name": "hack24-api",
  "description": "Hack24 Application",
  "version": "0.0.1",
  "private": true,
  "main": "src/server/index.js",
  "scripts": {
    "prebuild": "rm -rf build/",
    "build": "node node_modules/typescript/bin/tsc -p src/",
    "postinstall": "npm run build",
    "prestart": "npm run build",
    "start": "node bin/server.js",
    "test": "cd build && mocha --timeout 10000",
    "prebuild:watch": "npm run prebuild",
    "build:watch": "node node_modules/typescript/bin/tsc -p src/ -w",
    "test:watch": "cd build && mocha  --timeout 10000 -w"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "mongoose": "^4.4.3",
    "source-map-support": "^0.4.0",
    "typescript": "^1.7.5"
  },
  "devDependencies": {
    "mocha": "^2.4.5",
    "mongodb": "^2.1.7",
    "supertest": "^1.2.0",
    "typings": "^0.6.8"
  }
}
